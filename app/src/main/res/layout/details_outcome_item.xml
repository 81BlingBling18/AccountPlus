<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/detail_item_height">
    <View
        android:id="@+id/line"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/toolbar_green"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_shape_large"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        android:id="@+id/income_message"
        android:layout_width="@dimen/detail_message_width"
        android:layout_height="@dimen/detail_message_height"
        android:layout_toLeftOf="@id/line"
        android:layout_marginRight="23dp"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/type_and_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/detail_type_and_money_text_size"
                android:text="test text"/>

            <TextView
                android:id="@+id/remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/text_gray"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:textSize="@dimen/detail_remark_text_size"
                android:text="test text"
                android:layout_below="@id/type_and_money"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>